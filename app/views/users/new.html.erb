  <%= form.text_field :username, :value => "johndoe" %>
  <%= form.label :password %>
  <%= form.password_field :password %>
  <%= form.label :email %>
  <%= form.email_field :email, placeholder: "example@example.com" %>
  <%= form.submit "Submit:" %>
<% end %>
